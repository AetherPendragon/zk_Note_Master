<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择内置背景"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_builtin_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/background_1"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/image_builtin_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/background_2"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_builtin_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/background_3"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/image_builtin_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/background_4"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>